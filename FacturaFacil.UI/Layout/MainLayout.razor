@inherits LayoutComponentBase

<MudThemeProvider />
<MudPopoverProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar Elevation="1">
        <MudText Typo="Typo.h5" Class="ml-3">Factura Fácil</MudText>
        <MudSpacer />
        <MudButton Variant="Variant.Outlined" 
                   Color="Color.Inherit" 
                   StartIcon="@Icons.Material.Filled.Favorite" 
                   Href="link.mercadopago.com.ar/facturafacil" 
                   Target="_blank"
                   Class="mr-4">
            Donar
        </MudButton>
        <MudIconButton Icon="@Icons.Material.Filled.MoreVert" Color="Color.Inherit" Edge="Edge.End" />
    </MudAppBar>
    <MudMainContent>
        <MudContainer MaxWidth="MaxWidth.Large" Class="mt-4">
            @Body
        </MudContainer>
    </MudMainContent>
    </MudLayout>
    
